<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/item_fixture_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/fixture_coins_width"
            android:layout_height="match_parent"
            android:id="@+id/coins"
            android:background="@color/bronze"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/padding_8">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:contentDescription="@string/team_icon"
                android:id="@+id/team1_img"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/team1_name"
                android:textColor="@color/white"
                android:textSize="@dimen/team_name_text_size"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_8"
                android:layout_marginStart="@dimen/margin_8"/>

        </LinearLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/result_or_time"
            android:padding="@dimen/padding_8">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/result_or_time"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="center"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/padding_8">

            <TextView
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="match_parent"
                android:id="@+id/team2_name"
                android:textColor="@color/white"
                android:textSize="@dimen/team_name_text_size"
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/margin_8"
                android:layout_marginEnd="@dimen/margin_8"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="match_parent"
                android:contentDescription="@string/team_icon"
                android:id="@+id/team2_img"
                android:layout_gravity="end"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>